<body>

<header>Track Your Chai Order</header>

<div class="container">

  <h2 style="color:#92400e; text-align:center;">Enter your name to check your order</h2>

  <input type="text" id="searchName" placeholder="Enter your name">

  <button onclick="checkStatus()">Check Status</button>

  <div id="result"></div>
</div>

<script>
async function checkStatus() {
  const name = document.getElementById("searchName").value.trim();
  const resultBox = document.getElementById("result");

  if (!name) {
    resultBox.innerHTML = "<p style='color:red;'>Please enter your name.</p>";
    return;
  }

  const res = await fetch('/api/orders');
  const orders = await res.json();

  const match = orders.find(o => o.recipient.toLowerCase() === name.toLowerCase());

  if (!match) {
    resultBox.innerHTML = "<p style='color:red;'>No order found.</p>";
    return;
  }

  resultBox.innerHTML = `
    <div class="statusBox">
      <p><strong>Name:</strong> ${match.recipient}</p>
      <p><strong>Status:</strong> ${match.status}</p>
      <p><strong>Total:</strong> $${match.total}</p>
    </div>
  `;
}
</script>

